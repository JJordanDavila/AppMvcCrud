@using Soabel.DemoCrud.WebApp.ViewModel;
@model PersonaModel
@{
    ViewData["Title"] = "Editar Persona";
}
<h1>@ViewData["Title"]</h1>


@using (Html.BeginForm("Editar", "Persona", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Id, null, new { @class = "control-label col-sm-2" })

        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Id, null, new { @class = "form-control", @readonly=true })
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Apellidos, null, new { @class = "control-label col-sm-2" })

        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Apellidos, null, new { @class = "form-control" })
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Nombres, null, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Nombres, null, new { @class = "form-control" })
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DNI, null, new { @class = "control-label col-sm-2" })

        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.DNI, null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FechaNacimiento, null, new { @class = "control-label col-sm-2" })

        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FechaNacimiento, "{0:dd/MM/yyyy}", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Direccion, null, new { @class = "control-label col-sm-2" })

        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Direccion, null, new { @class = "form-control" })
        </div>
    </div>

    <input type="submit" value="Guardar" class="btn btn-primary" />
}

